{sub_dirs, ["apps/estockd", "rel"]}.
{deps_dir, ["deps"]}.

{require_otp_vsn, "R14"}.

{deps, [
        {gproc, ".*", {git, "git://github.com/esl/gproc.git", "HEAD"}}
       ]}.

{erl_opts, [
	    fail_on_warning, 
            debug_info,
            warn_missing_spec
       ]}.

{clean_files, ["*.eunit", "ebin/*.beam", "rel/estockd"]}.

{cover_enabled, true}.

{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.
